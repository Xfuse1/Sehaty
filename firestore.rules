    /**
     * @description Rules for the /users/{userId}/bookings/{bookingId} collection.
     * @path /users/{userId}/bookings/{bookingId}
     * @allow (create) User 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' can create a booking under their user ID.
     * @deny (create) User 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' cannot create a booking under a different user ID.
     * @allow (get) User 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' can get their own booking.
     * @deny (get) User 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' cannot get another user's booking.
     * @allow (list) User 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' can list their own bookings.
     * @deny (list) User 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' cannot list another user's bookings.
     * @allow (update) User 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' can update their own booking.
     * @deny (update) User 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' cannot update another user's booking.
     * @allow (delete) User 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' can delete their own booking.
     * @deny (delete) User 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' cannot delete another user's booking.
     * @principle Enforces document ownership for writes.
     */
    match /users/{userId}/bookings/{bookingId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
