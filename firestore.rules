/**
 * @fileoverview Firestore Security Rules for the Sehaty application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model for personal data (users, appointments, lab test bookings)
 * while allowing public read access to shared data (pharmacies, physiotherapy packages, doctors, clinics, nursing care packages, lab tests).
 *
 * Data Structure:
 * - /users/{userId}: Stores individual user profiles.
 * - /users/{userId}/appointments/{appointmentId}: Stores appointments associated with a specific user.
 * - /users/{userId}/labTestBookings/{labTestBookingId}: Stores lab test bookings associated with a specific user.
 * - /pharmacies/{pharmacyId}: Stores pharmacy information.
 * - /physiotherapyPackages/{packageId}: Stores physiotherapy package information.
 * - /doctors/{doctorId}: Stores doctor information.
 * - /clinics/{clinicId}: Stores clinic information.
 * - /nursingCarePackages/{packageId}: Stores nursing care package information.
 * - /labTests/{labTestId}: Stores lab test information.
 *
 * Key Security Decisions:
 * - Users can only read, create, update, and delete their own profiles and related data (appointments, lab test bookings).
 * - Public listing is enabled for pharmacies, physiotherapy packages, doctors, clinics, nursing care packages, and lab tests.
 * - Data validation is minimized for prototyping but critical authorization fields are validated.
 * - No user listing is allowed.
 *
 * Denormalization for Authorization:
 * The 'appointments' and 'labTestBookings' subcollections include a denormalized 'userId' field to allow for authorization checks without requiring a 'get()' on the parent user document. This improves performance and prevents rule evaluation errors.
 *
 * Structural Segregation:
 * User-specific data (appointments, labTestBookings) is stored in user-scoped subcollections to enable efficient listing and secure access control.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Protects user profiles.  Users can only read/write their own profile.
     * @path /users/{userId}
     * @allow (create) - User with ID 'user123' can create their profile.
     *     - Auth: {uid: 'user123'}
     *     - Request Data: {id: 'user123', name: 'John Doe', email: 'john@example.com', phoneNumber: '123-456-7890'}
     * @allow (get, update, delete) - User with ID 'user123' can read/update/delete their profile.
     *     - Auth: {uid: 'user123'}
     * @deny (create) - User with ID 'user456' cannot create a profile for 'user123'.
     *     - Auth: {uid: 'user456'}
     *     - Request Data: {id: 'user123', name: 'John Doe', email: 'john@example.com', phoneNumber: '123-456-7890'}
     * @deny (get, update, delete) - User with ID 'user456' cannot read/update/delete the profile of 'user123'.
     *     - Auth: {uid: 'user456'}
     * @principle Enforces document ownership for all operations.  Only the authenticated user can manage their own data.
     */
    match /users/{userId} {
      //  users can only read/write their own profile.
      allow get: if isOwner(userId);
      allow list: if false; // No user listing allowed.
      allow create: if isSelfCreation(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Allows public read access to pharmacy information.
     * @path /pharmacies/{pharmacyId}
     * @allow (get, list) - Any user can read pharmacy information.
     *     - Auth: {uid: 'anyUser'} or Auth: null
     * @deny (create, update, delete) - No user can create, update, or delete pharmacy information without custom business logic (e.g., admin role).
     *     - Auth: {uid: 'anyUser'}
     * @principle Allows public read access while restricting write access.
     */
    match /pharmacies/{pharmacyId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to physiotherapy package information.
     * @path /physiotherapyPackages/{packageId}
     * @allow (get, list) - Any user can read physiotherapy package information.
     *     - Auth: {uid: 'anyUser'} or Auth: null
     * @deny (create, update, delete) - No user can create, update, or delete physiotherapy package information without custom business logic (e.g., admin role).
     *     - Auth: {uid: 'anyUser'}
     * @principle Allows public read access while restricting write access.
     */
    match /physiotherapyPackages/{packageId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Protects appointments for a specific user.  Users can only manage their own appointments.
     * @path /users/{userId}/appointments/{appointmentId}
     * @allow (create) - User with ID 'user123' can create an appointment for themselves.
     *     - Auth: {uid: 'user123'}
     *     - Request Data: {userId: 'user123', doctorId: 'doctor456', appointmentDateTime: '2024-01-01T10:00:00Z', status: 'booked'}
     * @allow (get, list, update, delete) - User with ID 'user123' can read/list/update/delete their own appointments.
     *     - Auth: {uid: 'user123'}
     * @deny (create) - User with ID 'user456' cannot create an appointment for 'user123'.
     *     - Auth: {uid: 'user456'}
     *     - Request Data: {userId: 'user123', doctorId: 'doctor456', appointmentDateTime: '2024-01-01T10:00:00Z', status: 'booked'}
     * @deny (get, list, update, delete) - User with ID 'user456' cannot read/list/update/delete the appointments of 'user123'.
     *     - Auth: {uid: 'user456'}
     * @principle Enforces document ownership for all operations.  Only the authenticated user can manage their own appointments.
     */
    match /users/{userId}/appointments/{appointmentId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && isOwner(resource.data.userId);
      allow delete: if isExistingOwner(userId) && isOwner(resource.data.userId);
    }

    /**
     * @description Allows public read access to doctor information.
     * @path /doctors/{doctorId}
     * @allow (get, list) - Any user can read doctor information.
     *     - Auth: {uid: 'anyUser'} or Auth: null
     * @deny (create, update, delete) - No user can create, update, or delete doctor information without custom business logic (e.g., admin role).
     *     - Auth: {uid: 'anyUser'}
     * @principle Allows public read access while restricting write access.
     */
    match /doctors/{doctorId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to clinic information.
     * @path /clinics/{clinicId}
     * @allow (get, list) - Any user can read clinic information.
     *     - Auth: {uid: 'anyUser'} or Auth: null
     * @deny (create, update, delete) - No user can create, update, or delete clinic information without custom business logic (e.g., admin role).
     *     - Auth: {uid: 'anyUser'}
     * @principle Allows public read access while restricting write access.
     */
    match /clinics/{clinicId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to nursing care package information.
     * @path /nursingCarePackages/{packageId}
     * @allow (get, list) - Any user can read nursing care package information.
     *     - Auth: {uid: 'anyUser'} or Auth: null
     * @deny (create, update, delete) - No user can create, update, or delete nursing care package information without custom business logic (e.g., admin role).
     *     - Auth: {uid: 'anyUser'}
     * @principle Allows public read access while restricting write access.
     */
    match /nursingCarePackages/{packageId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Allows public read access to lab test information.
     * @path /labTests/{labTestId}
     * @allow (get, list) - Any user can read lab test information.
     *     - Auth: {uid: 'anyUser'} or Auth: null
     * @deny (create, update, delete) - No user can create, update, or delete lab test information without custom business logic (e.g., admin role).
     *     - Auth: {uid: 'anyUser'}
     * @principle Allows public read access while restricting write access.
     */
    match /labTests/{labTestId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Protects lab test bookings for a specific user.  Users can only manage their own lab test bookings.
     * @path /users/{userId}/labTestBookings/{labTestBookingId}
     * @allow (create) - User with ID 'user123' can create a lab test booking for themselves.
     *     - Auth: {uid: 'user123'}
     *     - Request Data: {userId: 'user123', labTestId: 'labTest456', bookingDateTime: '2024-01-05T14:00:00Z'}
     * @allow (get, list, update, delete) - User with ID 'user123' can read/list/update/delete their own lab test bookings.
     *     - Auth: {uid: 'user123'}
     * @deny (create) - User with ID 'user456' cannot create a lab test booking for 'user123'.
     *     - Auth: {uid: 'user456'}
     *     - Request Data: {userId: 'user123', labTestId: 'labTest456', bookingDateTime: '2024-01-05T14:00:00Z'}
     * @deny (get, list, update, delete) - User with ID 'user456' cannot read/list/update/delete the lab test bookings of 'user123'.
     *     - Auth: {uid: 'user456'}
     * @principle Enforces document ownership for all operations.  Only the authenticated user can manage their own lab test bookings.
     */
    match /users/{userId}/labTestBookings/{labTestBookingId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && isOwner(resource.data.userId);
      allow delete: if isExistingOwner(userId) && isOwner(resource.data.userId);
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return isSignedIn() && request.auth.uid == userId;
  }

  function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
  }

  function isSelfCreation(userId) {
    return isSignedIn() && request.auth.uid == userId && request.resource.data.id == userId;
  }
}