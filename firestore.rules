rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profiles.
     * @path /users/{userId}
     * @allow (create) - User with UID 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' can create their profile if userId == 'e91A6FcwMnPdUrUYWC2b2zzBmBp2'.
     * @allow (get, list, update, delete) - User with UID 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' can access their profile if userId == 'e91A6FcwMnPdUrUYWC2b2zzBmBp2'.
     * @deny (create) - User with UID 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' cannot create a profile with a different userId.
     * @deny (get, list, update, delete) - User with UID 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' cannot access another user's profile.
     * @principle Enforces document ownership for all operations on user profiles.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && existsAfter(/databases/$(database)/documents/users/$(userId));
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to pharmacy information. Pharmacies can be listed and viewed by anyone.
     * @path /pharmacies/{pharmacyId}
     * @allow (get, list) - Any user can read pharmacy information.
     * @deny (create, update, delete) - Only an admin can manage pharmacy information.  Placeholder rule only.
     * @principle Allows public read access to pharmacy data; write access is restricted.
     */
    match /pharmacies/{pharmacyId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin validation
    }

    /**
     * @description Controls access to physiotherapy package information. Packages can be listed and viewed by anyone.
     * @path /physiotherapyPackages/{packageId}
     * @allow (get, list) - Any user can read physiotherapy package information.
     * @deny (create, update, delete) - Only an admin can manage physiotherapy package information. Placeholder rule only.
     * @principle Allows public read access to physiotherapy package data; write access is restricted.
     */
    match /physiotherapyPackages/{packageId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin validation
    }

    /**
     * @description Controls access to appointments for a specific user. Uses path-based ownership.
     * @path /users/{userId}/appointments/{appointmentId}
     * @allow (create) - User with UID 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' can create an appointment under their userId.
     * @allow (get, list, update, delete) - User with UID 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' can manage their own appointments.
     * @deny (create) - User with UID 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' cannot create appointments under another user's userId.
     * @deny (get, list, update, delete) - User with UID 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' cannot manage appointments for other users.
     * @principle Enforces document ownership for all operations on appointments.
     */
    match /users/{userId}/appointments/{appointmentId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      function isExistingOwner(userId) {
          return isOwner(userId) && existsAfter(/databases/$(database)/documents/users/$(userId)/appointments/$(appointmentId));
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Controls access to doctor information. Doctors can be listed and viewed by anyone.
     * @path /doctors/{doctorId}
     * @allow (get, list) - Any user can read doctor information.
     * @deny (create, update, delete) - Only an admin can manage doctor information. Placeholder rule only.
     * @principle Allows public read access to doctor data; write access is restricted.
     */
    match /doctors/{doctorId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin validation
    }

    /**
     * @description Controls access to clinic information. Clinics can be listed and viewed by anyone.
     * @path /clinics/{clinicId}
     * @allow (get, list) - Any user can read clinic information.
     * @deny (create, update, delete) - Only an admin can manage clinic information. Placeholder rule only.
     * @principle Allows public read access to clinic data; write access is restricted.
     */
    match /clinics/{clinicId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin validation
    }

    /**
     * @description Controls access to nursing care package information. Packages can be listed and viewed by anyone.
     * @path /nursingCarePackages/{packageId}
     * @allow (get, list) - Any user can read nursing care package information.
     * @deny (create, update, delete) - Only an admin can manage nursing care package information. Placeholder rule only.
     * @principle Allows public read access to nursing care package data; write access is restricted.
     */
    match /nursingCarePackages/{packageId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin validation
    }

    /**
     * @description Controls access to lab test information. Lab tests can be listed and viewed by anyone.
     * @path /labTests/{labTestId}
     * @allow (get, list) - Any user can read lab test information.
     * @deny (create, update, delete) - Only an admin can manage lab test information. Placeholder rule only.
     * @principle Allows public read access to lab test data; write access is restricted.
     */
    match /labTests/{labTestId} {
      allow get, list: if true;
      allow create, update, delete: if false; // TODO: Add admin validation
    }

    /**
     * @description Controls access to lab test bookings for a specific user. Uses path-based ownership.
     * @path /users/{userId}/labTestBookings/{labTestBookingId}
     * @allow (create) - User with UID 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' can create a lab test booking under their userId.
     * @allow (get, list, update, delete) - User with UID 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' can manage their own lab test bookings.
     * @deny (create) - User with UID 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' cannot create lab test bookings under another user's userId.
     * @deny (get, list, update, delete) - User with UID 'e91A6FcwMnPdUrUYWC2b2zzBmBp2' cannot manage lab test bookings for other users.
     * @principle Enforces document ownership for all operations on lab test bookings.
     */
    match /users/{userId}/labTestBookings/{labTestBookingId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

       function isExistingOwner(userId) {
          return isOwner(userId) && existsAfter(/databases/$(database)/documents/users/$(userId)/labTestBookings/$(labTestBookingId));
      }


      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isExistingOwner(userId);
      allow delete: if isExistingOwner(userId);
    }
  }
}